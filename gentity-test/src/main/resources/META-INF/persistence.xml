<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

		<!-- 
			copy/paste the following properties into a persistence unit's
			<properties> section to enable logging and/or generate a DDL script
			
			<property name="eclipselink.ddl-generation.output-mode" value="both"/>

			<property name="eclipselink.logging.level" value="FINE"/>
			<property name="eclipselink.logging.level.sql" value="FINE"/>
			<property name="eclipselink.logging.parameters" value="true"/>
		-->
				 
	<persistence-unit name="Test0a_basic_table" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test0a_basic_table.Person</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test0b_basic_table_sequence" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test0b_basic_table_sequence.Person</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test0c_basic_table_autoincrement" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test0c_basic_table_autoincrement.Person</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test1a_one_to_many" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test1a_one_to_many.Company</class>
		<class>com.github.gentity.test.test1a_one_to_many.Employee</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test1b_one_to_one" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test1b_one_to_one.Companycar</class>
		<class>com.github.gentity.test.test1b_one_to_one.Desk</class>
		<class>com.github.gentity.test.test1b_one_to_one.Employee</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test1c_many_to_many" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test1c_many_to_many.Book</class>
		<class>com.github.gentity.test.test1c_many_to_many.Author</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test1" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test1.Customer</class>
		<class>com.github.gentity.test.test1.User</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
	<persistence-unit name="Test4a_polymorphism_joined" transaction-type="RESOURCE_LOCAL">
		<class>com.github.gentity.test.test4a_polymorphism_joined.Lifeform</class>
		<class>com.github.gentity.test.test4a_polymorphism_joined.Mammal</class>
		<class>com.github.gentity.test.test4a_polymorphism_joined.Insect</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>
</persistence>
