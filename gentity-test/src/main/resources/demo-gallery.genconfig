<mappingConfig
	xmlns='https://github.com/gentity/gentity/ns'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	    https://github.com/gentity/gentity/ns
			../../../../gentity-core/src/main/java/com/github/gentity/core/xsd/genconfig.xsd
	"
>
	<joinTable table="USER_ROLE" unidirectional="true">
		<ownerRelation foreignKey="FK_USER_ROLE_USER"/>
	</joinTable>
	<joinTable table="USER_GROUP" unidirectional='true'>
		<ownerRelation foreignKey="FK_USER_GROUP_USER"/>
	</joinTable>
	<entityTable table="ROLE_USER_ADMIN">
		<manyToOne foreignKey="FK_ROLE_USER_ADMIN_GROUP" bidirectional="false"/>
	</entityTable>
	
	<hierarchy>
		<joined>
			<discriminateBy column="DTYPE"/>
			<root table="ROLE" discriminator="ROLE"/>
			<joinRelation table="ROLE_USER_ADMIN" discriminator="ADMIN" foreignKey="FK_ROLE_GROUP_ADMIN_ROLE"/>
			<joinRelation table="ROLE_GALLERY_ACCESS" discriminator="GALLERY" foreignKey="FK_ROLE_GALLERY_ACCESS_ROLE"/>
		</joined>
	</hierarchy>
	
	<hierarchy>
		<singleTable>
			<discriminateBy column="DTYPE"/>
			<entity name="Picture" discriminator="PCIT" table="PICTURE">
				<entity name="UserIcon" discriminator="UICN">
					<field column="ICON_PUBLIC"/>
					<field column="ICON_USER_ID"/>
				</entity>
			</entity>
		</singleTable>
	</hierarchy>
</mappingConfig>